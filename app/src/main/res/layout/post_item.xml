<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/_my_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/avatar"/>

        <TextView
            android:id="@+id/_my_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ahmed Abobakr"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/ja"
            android:textColor="@color/appColor"/>

    </LinearLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">



        <androidx.cardview.widget.CardView
            android:id="@+id/_post"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:elevation="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            tools:ignore="MissingConstraints" >

            <ImageView
                android:id="@+id/_post_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_gray"/>

            <ProgressBar
                android:id="@+id/_load_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/_post_txt"
        android:layout_width="match_parent"
        android:text="ahmedahmedahmedahmedahmedahmedahmedahmed"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="50dp"/>

</LinearLayout>